        updateProfile(obj) ;
      }

      if(para == '性別'){
        msgObj.message = '詢問客戶資料(居住地)';
        emitIO_and_pushDB(msgObj);
        event.reply({
          "type": "template",
          "altText": "問券調查",
          "template": {
            "type": "buttons",
            "title": "問券調查:地區",
            "text": "請選擇您的性別",
            "actions": [{
              "type": "postback",
              "label": "地區:北部",
              "text": "地區:北部",
              "data": "Questionnaire_地區:北部"
            },{
              "type": "postback",
              "label": "地區:中部",
              "text": "地區:中部",
              "data": "Questionnaire_地區:中部"
            },{
              "type": "postback",
              "label": "地區:南部",
